)ATTR
   ¬ TYPE(TEXT)  SKIP(ON)
   ? TYPE(TEXT) INTENS(HIGH) COLOR(WHITE)
   @ TYPE(INPUT) INTENS(HIGH) COLOR(RED) PAD(_)
)BODY WINDOW(41,4)
      ?  CALCULO DE ESPACIO  +

?REGISTER LRECL       +====>   @LREC    ¬
?NUMBER OF REGISTERS +=====>   @NUMREG  ¬
)INIT
     &NUMREG = ' '
     &LREC = ' '
)PROC
  VER (&LREC,NB,NUM)
  IF (&LREC = '0')
    VER (&LREC,LIST,1,2)
  IF (&LREC > 27998)
     .MSG=INF107
  VER (&NUMREG,NB,NUM)
  IF (&NUMREG = '0')
    VER (&NUMREG,LIST,1,2)
)END
