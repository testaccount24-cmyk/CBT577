/*---  REXX  ---*/
ADDRESS ISPEXEC;
DO FOREVER
    ZWINTTL=" SPACE - DISK 3390 "
    "ADDPOP"
    'DISPLAY PANEL(PSPACE1)'
    IF RC = 8 THEN DO
       'REMPOP ALL'
       EXIT
    END
    REGBL=27998%LREC
    NUMCYL = NUMREG%(REGBL*30)
    IF NUMREG//(REGBL*30)¬=0 THEN NUMCYL=NUMCYL+1
    NUMTRK = NUMREG%(REGBL*2)
    IF NUMREG//(REGBL*2)¬=0 THEN NUMTRK=NUMTRK+1
    ZWINTTL=" SPACE - DISK 3390 "
    "ADDPOP ROW(9) COLUMN(10)"
    'DISPLAY PANEL(PSPACE2)'
    "REMPOP";"REMPOP"
END
EXIT
